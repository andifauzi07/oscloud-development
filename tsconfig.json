{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["./assets/*"],
            "@components/*": ["./components/*"],
            "@styles/*": ["./styles/*"],
            "@utils/*": ["./utils/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true
    }
}
